<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NhapLieu"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Trang nhập liệu"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="#1231DD">

    </TextView>

    <LinearLayout
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên : "
            android:textSize="20dp"
            >
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C59494">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sinh viên trường: "
            android:textSize="20dp">
        </TextView>
        <EditText
            android:id="@+id/edt_sinhvientruong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E91E63">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/btn_xacnhan"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Xác nhận nhập"
            android:textSize="20dp">

        </Button>
        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/btn_huybo"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Hủy bỏ"
            android:textSize="20dp">

        </Button>
    </LinearLayout>

</LinearLayout>